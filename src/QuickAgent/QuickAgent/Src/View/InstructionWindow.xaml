<Window x:Class="QuickAgent.Src.View.InstructionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       Title="{DynamicResource mainwindow_instruction}" Height="300" Width="380" Topmost="True" WindowStartupLocation="CenterScreen" Background="WhiteSmoke" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid>
        <TextBox Margin="10,10,10,45" Name="tbNotify" IsReadOnly="True" TextWrapping="Wrap" Background="WhiteSmoke" ScrollViewer.HorizontalScrollBarVisibility="Disabled"></TextBox>
        <Button Name="btnClose" Height="25" Width="70" HorizontalAlignment="Center" Margin="0,0,0,10" VerticalAlignment="Bottom" Content="关闭" IsCancel="True" Click="btnClose_Click"></Button>
    </Grid>
</Window>
